        Title="Refresh Status" Height="140" Width="500" Topmost="True" WindowStartupLocation="CenterOwner" ResizeMode="CanMinimize" WindowStyle="ToolWindow" Loaded="Window_ContentRendered">
    <Window.Background>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.AppWorkspaceColorKey}}"/>
    </Window.Background>
    <Grid>
        <ProgressBar x:Name="bar" Height="20" Margin="50,0" VerticalAlignment="Center"/>

    </Grid>
</Window>
